<!-- views/partials/_ header.ejs -->
<header>
  <h1>Tiny App</h1>
</header>
<% if(username) { %>
  <h2>Hey, <%= username %></h2>
  <form method="POST" action="/logout">
    <input type="submit" value="Logout">
  </form>
<% } else { %>
  <form method="POST" action="/login">
    <input type="text" name="username" placeholder="username">
    <input type="submit" value="Submit">
  </form>
<% } %>